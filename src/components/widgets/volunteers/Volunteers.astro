---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import type { Volunteer } from '~/cms/types';
import { Image } from 'astro:assets';

interface Props {
  volunteersInfo: Volunteer[];
  id?: string;
  title?: string;
  subtitle?: string;
  isDark?: boolean;
  classes?: { container?: string };
  bg?: any;
}

const { id, volunteersInfo } = Astro.props;

// Committee order (from Figma)
const committeeOrder = ['Creatives', 'Communications', 'Programs', 'Promotions', 'Logistics', 'Technicals', 'Website'];

const groupedVolunteers = committeeOrder.map(committee => ({
  title: committee,
  members: volunteersInfo.filter(volunteer => volunteer.committee.title === committee)
}));

// For volunteer name consistency
const getFirstName = (name: string) => {
  const nameParts = name.split(' ');
  return nameParts[0]; 
};

const getLastName = (name: string) => {
  const nameParts = name.split(' ');
  return nameParts.length > 1 ? nameParts[nameParts.length - 1] : '';
};
---

<WidgetWrapper id={id} containerClass="mb-10 font-monsterrat lg!pr-0">
  <!-- HEADER -->
  <div class="bg-container flex flex-col items-center justify-center md:m-5 p-5 md:rounded-2xl">
    <div class="flex w-full justify-center bg-radial-gradient from-[#FEF85D66] via-[#98943866] to-[#73737307] to-80%">
      <div
        class="font-extrabold text-4xl p-2 inline-block text-transparent bg-clip-text bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#FEF85D] to-[#989438]"
      >
        <h1>VOLUNTEERS</h1>
      </div>
    </div>
    <p class="pt-2 pb-10 font-semibold text-center text-xl">
      The event was a tremendous success thanks to the dedication and hard work of our incredible volunteers.
    </p>

    <!-- VOLUNTEER COMMITTEES -->
    <div class="w-full flex flex-col gap-9">
      <!-- Overall Head -->
      <div class="committee-container inline-block mx-auto">
        <div class="flex flex-col justify-center items-center pb-2">
          <h4 class="mb-3 font-semibold text-xl uppercase text-[#D5B5FF] px-6">Overall Head</h4>
          <div class="head-image-container">
            {volunteersInfo.filter(volunteer => volunteer.name === 'Arnel Jan Sarmiento').map(volunteer => (
              <div class="head-image-container">
                <Image
                  src={volunteer.image}
                  alt={volunteer.name}
                  class="head-frame"
                  width="130"
                  height="130"
                  loading="lazy"
                />
              </div>
            ))}
          </div>
          <p class="volunteer-first-name">Arnel Jan</p>
          <p class="volunteer-last-name">Sarmiento</p>
        </div>
      </div>

      <!-- Committee Members -->
      {groupedVolunteers.map(({ title, members }) => {
        // Separate committee heads
        const committeeHeads = members.filter(volunteer => volunteer.isCommitteeHead);
        const otherMembers = members.filter(volunteer => !volunteer.isCommitteeHead);
        return (
          <div class="w-full relative mb-5">
            <div class="committee-container w-full">
              <h3 class="text-center font-bold text-2xl md:text-4xl uppercase committee-title">{title}</h3>
              {committeeHeads.length > 0 && (
                <div class="text-center p-2 pt-6 sm:p-6 flex flex-wrap items-center justify-center gap-6 sm:gap-40 bg-contain">
                  {committeeHeads.map(volunteer => (
                    <div class="flex flex-col items-center text-lg md:text-xl w-[150px]">
                      <h4 class="mb-3 font-semibold text-lg leading-5 uppercase text-[#D5B5FF]">Committee Head</h4>
                      <div class="head-image-container">
                        <Image
                          src={volunteer.image}
                          alt={volunteer.name}
                          class="head-frame"
                          width="130"
                          height="130"
                          loading="lazy"
                        />
                      </div>
                      <p class="volunteer-first-name">{getFirstName(volunteer.name)}</p>
                      <p class="volunteer-last-name">{getLastName(volunteer.name)}</p>
                    </div>
                  ))}
                </div>
              )}
              {otherMembers.length > 0 && (
                <div class="text-center p-2 pt-10 sm:p-6 flex flex-wrap items-center justify-center gap-6 sm:gap-32 bg-contain">
                  {otherMembers.map(volunteer => (
                    <div class="flex flex-col items-center text-lg md:text-xl w-[150px]">
                      <Image
                        src={volunteer.image}
                        alt={volunteer.name}
                        class="frame"
                        width="130"
                        height="130"
                        loading="lazy"
                      />
                      <p class="volunteer-first-name">{getFirstName(volunteer.name)}</p>
                      <p class="volunteer-last-name">{getLastName(volunteer.name)}</p>
                    </div>
                  ))}
                </div>
              )}
            </div>
          </div>
        );
      })}
    </div>
  </div>
</WidgetWrapper>

<style>
  .committee-container {
    border: 2px solid #9747FF;
    background: #9747FF;
    background: rgba(151, 71, 255, 0.17);
    border-radius: 0.5rem;
    margin-top: 1rem; 
    padding: 0.25rem;
  }

  .committee-title {
    background: radial-gradient(50% 50% at 50% 50%, #C191FF 0%, #735799 100%);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    padding-top: 1rem;
  }

  .head-image-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 160px; 
    height: 160px;
    border-radius: 2rem;
    background: radial-gradient(64.42% 44.94% at 50.28% 0%, #9747FF 0%, #7939CC 18.64%, #6A32B3 46.91%, #622EA6 65.53%, #5B2B99 100%);

    .head-frame {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      overflow: hidden;
      position: relative;
      object-fit: cover;
    }
  }

  .frame {
    width: 130px;
    height: 130px;
    position: relative;
    object-fit: cover;
    border: 4px solid #9747FF;
    border-radius: 50%;
    overflow: hidden; 
  }

  .volunteer-first-name {
    font-size: 1.125rem;
    font-weight: 500;
    color: #D5B5FF;
    line-height: 1.25rem;
    padding-top: 0.75rem;
    text-transform: uppercase;
  }

  .volunteer-last-name {
    font-size: 0.875rem;
    font-weight: 500;
    color: #D5B5FF;
    line-height: 1.25rem;
  }
</style>
